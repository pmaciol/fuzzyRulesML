{
    "version": 8,
    "configurePresets": [
        {
            "name": "gcc13_debug",
            "displayName": "gcc13 toolchain, Debug, Ninja",
            "description": "Sets Ninja generator, build and install directory",
            "generator": "Ninja",
            "toolchainFile": "${sourceDir}/cmake/gcc13-toolchain.cmake",
